<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
  <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
  <ul class="nav navbar-nav">

    <% if !logged_in? %>
        <li class="nav-item">
          <a class="nav-link" href="<%= login_path %>">Log In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
        </li>
    <% else %>
        <li class="nav-item">
          <%= link_to "Log Out",logout_path ,class:"nav-link" ,method: :delete %>
        </li>

        <li class="nav-item">
          <%= link_to "Your Event",mines_events_path,class:"nav-link" ,method: :get %>
        </li>
        <li class="nav-item" style="float: right">
          <a class="nav-link" href="<%= new_event_path %>">Create Event</a>
        </li>
        <li class="nav-item" style="float: right">
          <a class="nav-link" href="<%= new_venue_path %>">Create Venue</a>
        </li>
    <% end %>
  </ul>
</nav>

<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> show">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= message %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
