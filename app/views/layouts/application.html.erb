<!DOCTYPE html>
<html>
<head>
  <title>FindTicket</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <%= link_to image_tag("/images/ticket.png", size: "50"), root_path %>
    &emsp;
        <% if !logged_in? %>
            <div class="nav-item" style="float: right">
              <a class="nav-link" href="<%= login_path %>">Log In</a>
            </div>
            <div>
                <a class="nav-link">|</a>
            </div>
            <div class="nav-item" style="float: right">
              <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
            </div>
        <% else %>
            <div class="nav-item" style="float: right">
              <%= link_to "Log Out",logout_path ,class:"nav-link" ,method: :delete %>
            </div>

            <div>
                <a class="nav-link">|</a>
            </div>

            <div class="nav-item" style="float: right">
              <%= link_to "Your Event",mines_events_path,class:"nav-link" ,method: :get %>
            </div>
            <div class="nav-item" style="float: right">
                <a class="nav-link">|</a>
            </div>
            <div class="nav-item" style="float: right">
              <a class="nav-link" href="<%= new_event_path %>">Create Event</a>
            </div>
            <div class="nav-item" style="float: right">
                <a class="nav-link">|</a>
            </div>
            <div class="nav-item" style="float: right">
              <a class="nav-link" href="<%= new_venue_path %>">Create Venue</a>
            </div>
        <% end %>
  </nav>

<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> show">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= message %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
